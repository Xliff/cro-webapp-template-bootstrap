<:macro bs-container(:$fluid)>
  <div class="container<?$fluid>-fluid</?>">
    <:body>
  </div>
</:>

<:macro bs-row>
  <div class="row">
    <:body>
  </div>
</:>

<:macro bs-col(:$n, :$sm, :$md, :$lg, :$xl)>
  <div class="col<?$sm>-sm</?><?$md>-md</?><?$lg>-lg</?><?$xl>-xl</?><?$n>-<$n></?>">
    <:body>
  </div>
</:>
